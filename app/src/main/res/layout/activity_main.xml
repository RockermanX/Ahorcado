<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cont-main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/contImg"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:background="#41A5E1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            app:srcCompat="@drawable/gallows"
            tools:visibility="invisible" />

        <ImageView
            android:id="@+id/imgHead"
            android:layout_width="54dp"
            android:layout_height="66dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="165dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/head" />

        <ImageView
            android:id="@+id/imgArms1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="99dp"
            android:layout_marginBottom="133dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/body" />

        <ImageView
            android:id="@+id/imgArms2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="101dp"
            android:layout_marginBottom="148dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/arm_left" />

        <ImageView
            android:id="@+id/imgArms3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="77dp"
            android:layout_marginBottom="148dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/arm_right" />

        <ImageView
            android:id="@+id/imgLegs1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="88dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/leg_left" />

        <ImageView
            android:id="@+id/imgLegs2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="86dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/leg_right" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="#182C44" />

    <GridLayout
        android:id="@+id/contName"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#69C33B"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="40sp"
            android:gravity="center"
            >

        </TextView>
    </GridLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="#182C44" />

    <GridLayout
        android:id="@+id/contLetras"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF5739"
        android:columnCount="5"
        />

</LinearLayout>
